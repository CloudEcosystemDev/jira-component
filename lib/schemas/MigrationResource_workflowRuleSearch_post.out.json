                    "conditions",
                    "postFunctions",
                    "validators",
                    "workflowId"
                ],
                "type": "object",
                "properties": {
                    "workflowId": {
                        "required": [
                            "draft",
                            "name"
                        ],
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "The name of the workflow."
                            },
                            "draft": {
